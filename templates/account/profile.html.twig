{% extends 'base.html.twig' %}

{% block title %}Modification du profil{% endblock %}


{% block body %}
<div class="container mt-4">
	

<h1>Modification du profil</h1>

{{ form_start(form) }}
<div class="row">
	<div class="form-group col-md-6">
		{{ form_row(form.firstName,{'label':false,'attr':{'placeholder':"Entrer votre nom"}}) }}
	</div>
	<div class="form-group col-md-6">
		{{ form_row(form.lastName,{'label':false,'attr':{'placeholder':"Entrer votre pr√©nom"}}) }}
	</div>
</div>

<div class="form-group">
	
	{{ form_row(form.picture,{'label':false,'attr':{'placeholder':"Entrer votre image de profil"}})}}
</div>
<div class="form-group">
	{{ form_row(form.email,{'label':false,'attr':{'placeholder':"Entrer votre email"}}) }}
	
</div>
<div class="form-group">
{{ form_row(form.introduction)}}
</div>
<div class="form-group">
{{ form_row(form.description)}}
</div>

<button type="submit" class="btn btn-success">Modification du profil</button>

{{ form_end(form) }}



</div>

{% endblock %}
