{% extends 'base.html.twig' %}

{% block title %}Modification du password{% endblock %}


{% block body %}
<div class="container mt-4">
	

<h1>Modification du mot de passe</h1>

{{ form_start(form) }}

{{ form_row(form.oldPassword,{'label':false,'attr':{'placeholder':"Entrer l'ancien mot de passe"}}) }}
{{ form_row(form.newPassword,{'label':false,'attr':{'placeholder':"Entrer le nouveau mot de passe"}}) }}
{{ form_row(form.confirmPassword,{'label':false,'attr':{'placeholder':"Confirmer le nouveau mot de passe"}})}}


<button type="submit" class="btn btn-success">Modification du mot de passe</button>

{{ form_end(form) }}



</div>

{% endblock %}
