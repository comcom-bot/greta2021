{% extends 'base.html.twig' %}

{% block title %}page de {{user.firstName }} {{ user.lastName }} }{% endblock %}

{% block body %}

<div class="container">

<h1 class="mt-3">profil de {{user.firstName }} {{ user.lastName }}</h1>

<div class="row mt-3">
	<div class="col-3">
		<img src="{{user.picture}}" class="mb-2"><br>
		<span class="badge badge-info">{{user.ads | length}} annonces </span>
	</div>

	<div class="col-9">
		{% if user is same as app.user %}
			<a href="{{path('account_profile')}}" class="btn btn-primary">Modifier mes informations</a>
			<a href="{{path('account_password')}}" class="btn btn-primary">Modifier mon mot de passe</a><br><br>

		{% endif %}
	{{ user.description }}
	</div>

</div>

<h2 class="mt-4 mb-4">Les annonces de {{user.firstName }} {{ user.lastName }}</h2>

{% if (user.ads | length) > 0 %}
<div class="row">
	{% for ad in user.ads %}

		{% include('ad/_ad.html.twig') %}

	{% endfor %}
</div>
{% else %}

<div class="row">
	<div class="alert alert-warning">Cet utilisateur n'a pas d'annonces</div>
</div>


{% endif %}



</div>





{% endblock %}
